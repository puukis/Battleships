<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:BattleshipsLan.UI.ViewModels"
             x:Class="BattleshipsLan.UI.Views.PlacementView"
             x:DataType="vm:GameViewModel">
    <StackPanel Spacing="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Place Your Ships" FontSize="24" HorizontalAlignment="Center"/>
        <TextBlock Text="{Binding StatusMessage}" HorizontalAlignment="Center" Foreground="Red"/>

        <StackPanel Orientation="Horizontal" Spacing="20">
            <Border BorderBrush="Black" BorderThickness="2">
                <ItemsControl ItemsSource="{Binding FlattenedMyBoard}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="10" Columns="10" Width="300" Height="300"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding $parent[UserControl].((vm:GameViewModel)DataContext).PlaceShipByIndex}"
                                    CommandParameter="{Binding $parent[ItemsControl].IndexFromContainer, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ContentPresenter}}"
                                    Padding="0" Margin="0" BorderThickness="0.5" BorderBrush="Gray"
                                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <Panel Width="30" Height="30" Background="{Binding Converter={StaticResource TileStatusToBrushConverter}}"/>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
            
            <StackPanel Spacing="10">
                <TextBlock Text="Controls:"/>
                <Button Content="{Binding CurrentOrientationText, StringFormat='Orientation: {0}'}" Command="{Binding ToggleOrientation}"/>
                <TextBlock Text="Remaining Ships:"/>
                <ItemsControl ItemsSource="{Binding RemainingShips}"/>
                
                <Button Content="Randomize Fleet" Command="{Binding RandomizeShips}"/>
                <Button Content="Confirm Placement" Command="{Binding ConfirmPlacement}" IsEnabled="{Binding !RemainingShips.Count}"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
